{
  "name": "drm-digital-backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.12",
    "@types/uuid": "^9.0.8",
    "pre-commit": "^1.2.2",
    "rimraf": "^5.0.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "dev": "ts-node-dev src/index.ts --watch",
    "build": "tsc --build",
    "ts.check": "tsc --project tsconfig.json",
    "start": "node ./dist/index.js",
    "test": "jest --verbose"
  },
  "pre-commit": [
    "ts.check",
    "build"
  ],
  "dependencies": {
    "@prisma/client": "5.14.0",
    "@types/jest": "^29.5.12",
    "@types/pdf-parse": "^1.1.4",
    "@types/supertest": "^6.0.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "firebase-admin": "^12.1.1",
    "helmet": "^7.1.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "2.0.4",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pino": "^9.1.0",
    "pino-pretty": "^11.0.0",
    "prisma": "^5.14.0",
    "rate-limiter-flexible": "^5.0.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.3",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "*/.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
