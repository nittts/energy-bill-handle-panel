
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id                String     @id @unique @default(uuid())

  clientNumber      String     @unique
  name              String
  streetAddress     String
  district          String
  address           String
  cpfCnpj           String     @unique
  stateSubscription String

  bills             Bill[]

  @@map("company")
}

model Bill {
  id                             String          @id @unique @default(uuid())
  
  companyId                      String
  clientNumber                   String 
  installationNumber             String

  energyElectric                 Int
  energyElectricCost             Int
  energySceeeWithoutICMS         Int
  energySceeeWithoutICMSCost     Int
     
  energyGD                       Int
  energyGDEconomy                Int

  municipalityContributionCost   Int
  totalCost                      Int
         
  referenceMonth                 DateTime
  dueDate                        DateTime
  emissionDate                   DateTime
  createdAt                      DateTime         @default(now())

  uploadPath                     String

  information                    BillInformation?
  billHistory                    BillHistory[]

  company                        Company          @relation(fields: [companyId], references: [id])

  @@index([clientNumber, installationNumber, companyId])
  @@index([referenceMonth, dueDate, emissionDate])
  @@index([createdAt])
  @@map("bill")
}

model BillInformation {
  id     String @id @unique @default(uuid())
  BillId String @unique
  info   String

  bill   Bill   @relation(fields: [BillId], references: [id])

  @@map("bill_information")
}

model BillHistory {
  id            String     @id @unique @default(uuid())
  billId        String

  monthYear     DateTime
  consumption   Int
  averageDayKwh Float
  days          Int

  bill          Bill       @relation(fields: [billId], references: [id])
  
  @@map("bill_history")
}