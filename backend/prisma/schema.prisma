
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bill {
  id                             String     @id @unique @default(uuid())
       
  clientId                       String 
  installationId                 String
       
  energyElectric                 Int
  energyElectricCost             Int
  energySceeeWithoutICMS         Int
  energySceeeWithoutICMSCost     Int
     
  energyGD                       Int
  energyGDCost                   Int

  municipalityContributionCost   Int
  totalCost                      Int
         
  referenceMonth                 DateTime
  dueDate                        DateTime
     
  information                    BillInformation?

  @@index([clientId, referenceMonth, installationId])
  @@map("bill")
}

model BillInformation {
  id     Int    @id @default(autoincrement())
  BillId String @unique
  info   String

  bill   Bill   @relation(fields: [BillId], references: [id])

  @@map("bill_information")
}